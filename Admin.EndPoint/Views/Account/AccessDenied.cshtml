

@{
    ViewData["Title"] = "ورود به حساب";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ورود  </title>
    <!-- font-awesome -->
    <link href="~/Theme/assets/css/font.css" rel="stylesheet" />
    <link href="~/Theme/assets/css/font-awesome.min.css" rel="stylesheet" />
    <!-- Bootstrap 4.5.3 -->
    <link rel="stylesheet" href="~/Theme/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Theme/assets/css/theme.css">

</head>

<body style="padding-top: 50px !important">

    <div class="page-wrapper auth-page-wrapper">

        <!-- Page Content -->
        <main class="page-content">
            <div class="container">
                <div class="auth-wrapper">
                    <div class="auth-form shadow-around">
                        <div class="site-logo">
                            <a href="~/">
                                <img src="~/Theme/assets/img/90x90.jpg" />
                            </a>
                        </div>
                        <div class="auth-form-title text-center">
                            فروشگاه لوازم یدکی زنجانی
                        </div>

                        @if (ViewBag.message != null && ViewBag.message != "")
                        {
                            <div class="col-md-6 offset-md-3">

                                <div class="card p-2">

                                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">×</span>
                                        </button>
                                        <strong>  @ViewBag.message</strong>
                                        <i class="fa fa-exclamation-circle"></i>
                                    </div>
                                    <a class="btn btn-primary col-md-6 offset-md-3 btn-lg" asp-area="" asp-controller="Home" asp-action="Index"><span aria-hidden="true" class="fa fa-home"></span> صفحه اصلی </a>
                                </div>
                            </div>


                        }
                        else
                        {
                            <div class="center" style="text-align:center;">
                                <h5> شما مجوز دسترسی به لینک انتخاب شده را ندارید.</h5>
                                <a class="btn btn-primary btn-lg" asp-area="" asp-controller="Home" asp-action="Index"><span aria-hidden="true" class="fa fa-home"></span> صفحه اصلی </a>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </main>
        <!-- end Page Content -->
        <!-- Page mini-Footer -->
        <footer class="mini-footer">
            <div class="container main-container">
                <div class="row">
                    <div class="col-12">
                        <ul class="mini-footer-menu">
                            <li><a href="#">درباره ما</a></li>
                            <li><a href="#">فرصت های شغلی</a></li>
                            <li><a href="#">تماس با ما</a></li>
                            <li><a href="#">همکاری با سازمان ها</a></li>
                        </ul>
                    </div>
                    <div class="col-12 mt-2 mb-3">
                        <div class="footer-light-text">
                            استفاده از مطالب فروشگاه لوازم یدکی خودرو اینترنتی زنجانی , فقط برای مقاصد غیرتجاری و با ذکر منبع بلامانع است..
                        </div>
                    </div>
                    <div class="col-12 text-center">
                        <div class="copy-right-mini-footer">
                            © All rights reserved
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <!-- end Page mini-Footer -->

    </div>


    <script src="~/Theme/assets/js/jquery-3.5.1.min.js"></script>
    <script src="~/lib/fontawesome-free-5.15.4-web/js/all.min.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
</body>

</html>




