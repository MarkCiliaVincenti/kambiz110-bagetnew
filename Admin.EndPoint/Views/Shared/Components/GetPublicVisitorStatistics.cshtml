<script src="~/lib/chart/Chart.min.js"></script>


<script>

    var DisplayHour=@Html.Raw(Json.Serialize(Model.Today.VisitPerhour.Display));
    var ValueHour=@Html.Raw(Json.Serialize(Model.Today.VisitPerhour.Value));



    var DisplayDay=@Html.Raw(Json.Serialize(Model.GeneralStats.VisitPerDay.Display));
    var ValueDay =@Html.Raw(Json.Serialize(Model.GeneralStats.VisitPerDay.Value));

       var DisplayHourPerDayes=@Html.Raw(Json.Serialize(Model.GeneralStats.VisitHourPerDayes.Display));
    var ValueHourPerDayes=@Html.Raw(Json.Serialize(Model.GeneralStats.VisitHourPerDayes.Value));

        var slineDay = {
            chart: {
                height: 350,
                type: 'line',
                zoom: {
                    enabled: false
                },
                toolbar: {
                    show: false,
                }
            },
            dataLabels: {
                enabled: false
            },
            stroke: {
                curve: 'straight'
            },
            series: [{
                name: "تعداد بازدید",
                data: ValueDay, //[150, 41, 35, 91, 49, 62, 69, 91, 148]
            }],
            //title: {
            //    text: 'بازدید 30 روز گذشته',
            //    align: 'right',
            //    offsetX: -95,
            //},
            grid: {
                row: {
                    colors: ['#f1f2f3', 'transparent'], // takes an array which will be repeated on columns
                    opacity: 0.5
                },
            },
            xaxis: {
                categories: DisplayDay, //['فروردین', 'اردیبهشت', 'خرداد', 'تیر', 'مرداد', 'شهریور', 'مهر', 'آبان', 'آذر'],
            },
            yaxis: {
                labels: {
                    offsetX: -20,
                }
            }
        }
        var chartDay = new ApexCharts(
            document.querySelector("#s-lineDay"),
            slineDay
        );
        chartDay.render();

        var ctx = document.getElementById("line-Chart").getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: DisplayHour,
                datasets: [{
                    label: 'بازدید 24 ساعت گذشته',
                    data: ValueHour,
                    fill: false,
                    borderColor: '#fbc658',
                    backgroundColor: 'transparent',
                    pointBorderColor: '#fbc658',
                    pointRadius: 4,
                    pointHoverRadius: 4,
                    pointBorderWidth: 8,
                }]
            }
        });
        var ctx = document.getElementById("income").getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: DisplayHourPerDayes,
                datasets: [{
                    label: 'نعداد بازدید ',
                    data: ValueHourPerDayes,
                    backgroundColor: "rgba(234, 0, 0,0.4)"
                }]
            },
            options: {
                scales: {
                    xAxes: [{
                        ticks: {
                            fontSize: 15,
                            fontColor: 'black',
                            fontWeight: "bold",
                        }
                    }]
                }
            }
        });


</script>



