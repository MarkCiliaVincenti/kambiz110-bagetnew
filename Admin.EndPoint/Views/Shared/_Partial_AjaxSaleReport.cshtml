@using Application.Orders.Dto
@model FerstSaleReportQueryViewModel
@{
    var test = Model;
}

<div class="col-xl-12 col-md-12">
    <div class="card card-chart">
        <div class="card-header">
            <h5 class="card-title">آمار کل خرید بر اساس بازه زمانی انتخاب شده</h5>
            <p class="card-category"></p>
        </div>
        <div class="card-body">

            <canvas id="TestlineDay" width="400" height="100"></canvas>
        </div>
        <div class="card-footer">
            <div class="chart-legend">

            </div>

        </div>
    </div>
</div>




<script>
    var SaleReportDisplay=@Html.Raw(Json.Serialize(Model.Today.SaleReport.Display));
    var SaleReportValue =@Html.Raw(Json.Serialize(Model.Today.SaleReport.Value));
    var SaleReportUserCount =@Html.Raw(Json.Serialize(Model.Today.SaleReport.UserCount));
    var SaleReportBuyCount=@Html.Raw(Json.Serialize(Model.Today.SaleReport.BuyCount));

    var ctx = document.getElementById("TestlineDay").getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: SaleReportDisplay,
            datasets: [{
                label: 'فروش(تومان) ',
                data: SaleReportValue,
                backgroundColor: "rgba(234, 0, 0,0.4)"
            }]
        },
        options: {
            scales: {
                xAxes: [{
                    ticks: {
                        fontSize: 15,
                        fontColor: 'black',
                        fontWeight: "bold",
                    }
                }]
            }
        }
    });
</script>