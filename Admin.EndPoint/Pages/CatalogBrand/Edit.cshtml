@page
@model Admin.EndPoint.Pages.CatalogBrand.EditModel
@{
}
<div class="col-lg-12 col-12 layout-spacing">
    <div class="statbox widget box box-shadow">
        <div class="widget-header">
            <div class="row">
                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                    <h4> ویرایش  برند </h4>
                </div>
            </div>
        </div>
        <div class="widget-content widget-content-area">
            <form asp-page="edit" method="post">
                @if (Model.Message != null)
                {
                    @foreach (var item in Model.Message)
                    {
                        <div class="alert alert-info">
                            <p>@item</p>
                        </div>
                    }
                }


                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-4">
                    <label asp-for="CatalogBrand.Brand"> </label>
                    <input type="text" class="form-control" asp-for="CatalogBrand.Brand">
                    <span asp-validation-for="CatalogBrand.Brand" class="text-danger"></span>
                </div>
                <div class="form-group mb-4">
                    <label asp-for="CatalogBrand.Src"> </label>
                    <input type="text" class="form-control" asp-for="CatalogBrand.Src">
                    <span asp-validation-for="CatalogBrand.Src" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <span class="ml-2 mr-2">آیا خودرو داخلی است ؟</span>  <input class="form-check-input" asp-for="CatalogBrand.IsDakely" />
                    </label>
                </div>
                <input type="hidden" asp-for="CatalogBrand.Id" />
                <input type="submit" name="time" value="ثبت" class="btn btn-primary">
                <a asp-page="index" class="btn btn-info">برگشت به لیست</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_AjaxJquery"); }
}