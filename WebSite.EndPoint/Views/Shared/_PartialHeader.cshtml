@addTagHelper *, Models

<header>
    <div class="main_header">
        <!--header top start-->
        <div class="header_top">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-4 col-md-5">
                        <div class="header_account">
                            <ul>
                                <li class="language">
                                    <a href="#">
                                        <img src="~/NewThem/assets/img/logo/language.png" alt="">
                                        فارسی <i class="ion-chevron-down"></i>
                                    </a>
                                    <ul class="dropdown_language">
                                        <li><a href="#">فارسی</a></li>
                                        <li><a href="#">انگلیسی</a></li>
                                        <li><a href="#">عربی</a></li>
                                    </ul>
                                </li>
                                <li class="currency">
                                    <a href="#">تومان <i class="ion-chevron-down"></i></a>
                                    <ul class="dropdown_currency">
                                        <li><a href="#">دینار</a></li>
                                        <li><a href="#">تومان</a></li>
                                        <li><a href="#">دلار</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-8 col-md-7">
                        <div class="header_top_links text-right">
                            <ul>
                                @if (User.Identity.IsAuthenticated)
                                {
                                <li> سلام &nbsp; @User.FindFirst(System.Security.Claims.ClaimTypes.GivenName).Value.ToString()</li>
                                <li><a asp-area="Customers" asp-controller="Address" asp-action="Index">ورود به حساب کاربری</a></li>
                                    <li><a asp-area="" asp-controller="Basket" asp-action="Index">سبد خرید</a></li>
                                }
                                else
                                {
                                    <li><a asp-area="" asp-controller="Account" asp-action="Register">ثبت نام</a></li>
                                    <li><a asp-area="" asp-controller="Account" asp-action="Login">ورود</a></li>
                                    <li><a asp-area="" asp-controller="Basket" asp-action="Index">سبد خرید</a></li>
                                }

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--header top start-->
        <!--header middel start-->
        <div class="header_middle">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-2 col-md-4 col-sm-4 col-4">
                        <div class="logo">
                            <a href="~/"><img src="~/NewThem/assets/img/logo/logo.png" alt=""></a>
                        </div>
                    </div>
                    <div class="col-lg-10 col-md-6 col-sm-6 col-6">
                        <div class="header_right_box">
                            <div class="search_container">
                                <form action="/product/index" method="get">
                                    @(await Component.InvokeAsync("HeaderSearchKey", new { sortIndex=0,  count=9}))
                                    <div class="search_box">
                                        <input placeholder="جستجوی محصول ..." type="text" name="SearchKey">
                                        <button type="submit">محصول</button>
                                    </div>
                                </form>
                            </div>
                            <div class="header_configure_area">
                                <div class="header_wishlist">
                                    <a href="wishlist.html">
                                        <i class="icon-heart"></i>
                                        <span class="wishlist_count">3</span>
                                    </a>
                                </div>

                                @await Component.InvokeAsync("BasketComponent")

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--header middel end-->
        <!--header bottom satrt-->
        <div class="header_bottom sticky-header">
            <div class="container">
                <div class="row align-items-center">
                    <div class=" col-lg-3">
                        <div class="categories_menu">
                            <div class="categories_title">
                                <h2 class="categori_toggle">همه دسته بندی ها</h2>
                            </div>
                            <div class="categories_menu_toggle">
                                @*@await Component.InvokeAsync("CategoriesMenu")*@
                              <menu-item></menu-item>
                             
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="main_menu menu_position text-left">
                            <nav>
                                <ul>
                                    <li>
                                        <a class="active" href="~/">خانه<i class="fa fa-angle-down d-none"></i></a>
                                        <ul class="sub_menu d-none">
                                            <li><a href="index.html">خانه 1</a></li>
                                            <li><a href="index-2.html">خانه 2</a></li>
                                            <li><a href="index-3.html">خانه 3</a></li>
                                            <li><a href="index-4.html">خانه 4</a></li>
                                        </ul>
                                    </li>


                                    <li><a href="about.html">درباره ما</a></li>
                                    <li><a href="contact.html"> تماس با ما</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="call_support text-right">
                            <p>
                                <i class="icon-phone-call" aria-hidden="true"></i> <span>
                                    تماس با ما: <a href="tel:09124918349">09124918349</a>
                                </span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--header bottom end-->
    </div>
</header>
<!--header area end-->